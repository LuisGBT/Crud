<style>
    *{
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        background-color: #ffff;
    }

    form{
        background-color: antiquewhite;
    }

    .btn{
        font-size: 18px;
        width: 100px;
    }
    
</style>

<main>
<form action="" class="container col-12 col-md-6 mt-3 border border-2 border-start-0">
 <div class="row align-items-center">
  <div class="col">
    <h1 class="text-center">Register</h1>
    <div class="mb-3">
     <label for="form-label">Name</label>
     <input class="form-control" type="text" id="name" placeholder="Your name" required>
    </div>
    <div class="mb-3">
     <label for="form-label">Idade</label>
     <input class="form-control" type="number" id="idade" placeholder="Your age" required>
    </div>
    <div class="mb-3">
     <label for="form-label">Email</label>
     <input class="form-control" type="email" id="email" placeholder="example@gmail.com" required>
    </div>
    <div class="mb-3">
     <label for="form-label">Password</label>
     <input class="form-control" type="password" id="password" placeholder="********" required> 
    </div>
    <div class="mb-3">
     <input class="btn btn-primary" type="submit" value="Send">
    </div>
  </div>
 </div>
</form>
</main>


